{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-3xl font-semibold mb-4 dark:text-white">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="flex gap-6 w-full">
        {{ form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Nom'
        }) }}
    </div>
        {{ form_row(registrationForm.age) }}
        {{ form_row(registrationForm.sex, {
            label: 'Genre'
        }) }}
        {{ form_row(registrationForm.address, {
            label: 'Adresse'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.phone_number, {
            label: 'Numéro de téléphone'
        }) }}
        {{ form_row(registrationForm.nss, {
            label: 'Numéro de sécurité sociale'
        }) }}
    <div class="flex gap-6 w-full">
        {{ form_row(registrationForm.licence, {
            label: 'Êtes-vous possesseur du permis B ?'
        }) }}
        {{ form_row(registrationForm.intermittent, {
            label: 'Êtes-vous intermittent du spectacle ?'
        }) }}
    </div>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Accepter les conditions générales'
        }) }}

        <button type="submit" class="mt-5 bg-teal-500 text-white p-2 rounded hover:bg-teal-800">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
